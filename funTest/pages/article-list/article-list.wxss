/*整个页面的样式*/
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
/*分类*/
.typeName{
	width: 100%;
  text-align: center;
  margin-top:10rpx;
}

/*顶部导航*/
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #FFCC00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}

/*文章列表的样式*/
.post-container{
	display: flex;
	flex-direction: column;
	align-items: center;
  margin-top:10rpx;
	border-radius: 5px;
}

.post{
	display: flex;
  width: 93%;
  height: 200rpx;
  margin-top:10rpx;
  border-bottom: 0.5px solid #dedede;
}

.post image{
	width: 35%;
	height: 150rpx;
	padding: 5px;
  border-radius: 21px; 
}

.post-text{
	width: 75%;
}

/*文章详情里的时间样式*/
.post-time{
	margin-top:20rpx;
	font-size: 24rpx;
  color: #5b5a5a;
}
.post-title{
  font-size:17px;
}

/*没有更多*/
.no_more{
  color: #5b5a5a;
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}