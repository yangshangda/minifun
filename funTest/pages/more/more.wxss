/*整个页面的样式*/
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/*导航图标*/
.icon{
  display: flex;
  justify-content: center;
  width: 99%;
  margin-top: 40rpx;
  flex-wrap: wrap;
}
.combination{
  width: 24%;
  height: 160rpx;
  text-align: center;
  font-size: 30rpx;
}
.icon view image{
  width: 95rpx;
  height: 95rpx;
}

/*分界线*/
.bottom_line{
  background-color: #f6f6f6;
  height: 23rpx;
  margin-top: 25rpx;
  margin-bottom: 20rpx;
}

/*左边线*/
.left_line{
  background-color: #EDB34F;
  width: 10rpx;
  height: 40rpx;
  float: left;
}

/*分类*/
.sort{
  width: 99%;
  height: 300rpx;
  
}
.sort_top{
  width: 100%;
  height: 50rpx;
}
.sort_text{
  width: 150rpx;
  display: block;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-left: 30rpx;
  float: left;
}
.sort_more{
  width: 150rpx;
  display: block;
  font-size: 30rpx;
  line-height: 40rpx;
  color: rgba(40, 130, 247, 0.911);
  float: right;
}

/*分类文章*/
.sort_all_article{
  width: 200%;
  height:auto;
}
.sort_article{
  width: 198rpx;
  float: left;  
}
.sort_article_img{
  width: 180rpx;
	height: 180rpx;
	padding: 11rpx;
  border-radius: 40rpx;
}
.sort_article_text{
  display: flex;
  justify-content: center;
  text-align: center;
  margin-top:-10rpx;
	font-size: 26rpx;
  color: #5b5a5a;
  width: 90%;
  margin-left: 10rpx;
}

/*分界线*/
.bottom_article_line{
  background-color: #f6f6f6;
  height: 8rpx;
  margin-bottom: 20rpx;
}

/*没有更多*/
.no_more{
  color: #5b5a5a;
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}