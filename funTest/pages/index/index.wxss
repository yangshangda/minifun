/*整个页面的样式*/
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/*轮播图的样式*/
swiper{
	width: 100%;
	height: 320rpx;
}

swiper image{
	width: 100%;
	height: 320rpx
}

/*个人中心图标样式*/
.userCenter{
  width: 50rpx;
  height: 1rpx;
}

.userCenter image{
  width: 68rpx;
  height: 70rpx;
  border-radius: 50%;
  position: fixed;
  margin-top: -280rpx;
  margin-left: 630rpx;
}

.muteMusic{
  width: 50rpx;
  height: 1rpx;
}

.muteMusic image{
  background-color: white;
  width: 68rpx;
  height: 70rpx;
  border-radius: 50%;
  position: fixed;
  margin-top: -310rpx;
  margin-left: 630rpx;
}
 
/*分界线*/
.middle{
  background-color: #f6f6f6;
  height: 23rpx;
  margin-bottom:20rpx; 
}

/*中间图标*/
.icon{
  display: flex;
  justify-content: center;
  width: 99%;
  height: 160rpx;
}
.combination{
  width: 24%;
  height: 160rpx;
  text-align: center;
  font-size: 30rpx;
}

.icon view image{
  width: 95rpx;
  height: 95rpx;
}
/*推荐标题的样式*/
.recommendText text{
	color: white;
	font-size: 46rpx;
}

/*文章列表的样式*/
.post-container{
	display: flex;
	flex-direction: column;
	align-items: center;
  margin-top:10rpx;
	border-radius: 10rpx;
}

.post{
	display: flex;
  width: 93%;
  height: 200rpx;
  margin-top:10rpx;
  border-bottom: 0.5px solid #dedede;
}

.post image{
	width: 35%;
	height: 150rpx;
	padding: 10rpx;
  border-radius: 40rpx; 
}

.post-text{
	width: 75%;
}

/*文章详情里的时间样式*/
.post-time{
	margin-top:20rpx;
	font-size: 26rpx;
  color: #5b5a5a;
}
.post-title{
  font-size:38rpx;
}
/*更多按钮的样式*/
.post-more{
  display: flex;
  justify-content: center;
}
.btn {
	margin-top: 20rpx;
	border: 1px solid black;
	border-radius:5px;
	height: 50rpx;
	width: 100rpx;
	text-align: center;
  font-size: 15px;
  margin-bottom: 10rpx;
}

/*文章列表底部线*/


/*文章列表*/
.artical-list{
  width:100%;
  height: 30rpx;
  margin: 20rpx 0rpx 15rpx 0rpx;
  font-size: 30rpx;
  text-align: center;

}

/*没有更多*/
.no_more{
  color: #5b5a5a;
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}