/*整个页面的样式*/
.container1{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/*个人中心图标样式*/
.user_center{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 400rpx;
}
.user_center image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-top: 30rpx;
}

/*昵称*/
.userinfo_nickname {
  height: 50rpx;
  color: #aaa;
  margin-top: 10rpx;
}

/*动态*/
.user_state{
  display: flex;
  justify-content: center;
  align-items:center;
  background-color:rgba(0,0,0,0.3);
  filter:alpha(Opacity=80);-moz-opacity:0.7;opacity: 0.7;
  height: 130rpx;
  width: 100%;
  margin-top: 36rpx;
}
.state_sort{
  width: 23%;
  height: 80%;
  text-align: center;
}
.state_sort text{
  display: block;
  width: 100%;
  height: 49%;
  text-align: center;
  font-size: 32rpx;
  color: white;
}
.state_sort_line{
  background-color:#4d4d4db0;
  width: 5rpx;
  height: 50%;
  text-align: center;
}

/*分界线*/
.bottom_line{
  background-color: #f6f6f6;
  width: 100%;
  height: 23rpx;
}

/*导航图标*/
.icon{
  display: flex;
  justify-content: center;
  width: 99%;
  margin-top: 40rpx;
  flex-wrap: wrap;
}
.combination{
  width: 30%;
  height: 210rpx;
  text-align: center;
  font-size: 35rpx;
}
